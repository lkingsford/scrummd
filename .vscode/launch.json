{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Launch swrite with args",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scrummd/swrite.py",  
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "python": "${workspaceFolder}/env/bin/python",       
      "args": [
        "--someflag",
        "value",
        "--other-flag",
        "another_value"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Debug current file (no args)",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/env/bin/python",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Debug current file with args",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/env/bin/python",
      "args": [
        "--flag-for-current-file",
        "some_value"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: pytest (with args)",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "justMyCode": false,
      "args": [
        "${input:pytestArgs}"
      ],
      "console": "integratedTerminal"
    }
  ],
  "inputs": [
    {
      "id": "pytestArgs",
      "type": "promptString",
      "description": "Enter pytest arguments (e.g. tests/test_file.py::TestClass::test_func -k keyword -v)",
      "default": ""
    }
  ]
}
